          },
          {
            "id": "product2",
            "type": "product",
            "label": "Featured Product 2"
          },
          {
            "id": "product3",
            "type": "product",
            "label": "Featured Product 3"
          },
          {
            "id": "product4",
            "type": "product",
            "label": "Featured Product 4"
          },
          {
            "id": "product5",
            "type": "product",
            "label": "Featured Product 5"
          }
        ]
      },
      {
        "type": "lookbook-cover",
        "name": "Lookbook Cover",
        "settings": [
          {
            "id": "image",
            "type": "image_picker",
            "label": "Image"
          },
          {
            "id": "title",
            "type": "text",
            "label": "Title"
          },
          {
            "id": "subtitle",
